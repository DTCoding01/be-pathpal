{
    "endpoints": [
      {
        "method": "POST",
        "path": "/api/user/create/",
        "description": "Creates a new user in the system.",
        "parameters": {
          "body": {
            "name": "string (required)",
            "email": "string (required)"
          }
        },
        "response": {
          "status": "201 Created",
          "body": {
            "user_id": "ObjectId of the created user"
          }
        }
      },
      {
        "method": "GET",
        "path": "/api/user/<id>/",
        "description": "Retrieves a user by their ID.",
        "parameters": {
          "path": {
            "id": "string (required)"
          }
        },
        "response": {
          "status": "200 OK",
          "body": {
            "name": "User's name",
            "email": "User's email",
            "level": "User's level",
            "step_details": {
              "step_goal": "integer",
              "total_steps": "integer",
              "todays_steps": "integer"
            },
            "pet_details": {
              "chosen_hat": "string",
              "chosen_toy": "string",
              "pet_name": "string",
              "pet_breed": "string"
            },
            "items": [
              {
                "item_type": "string",
                "item": "string",
                "item_color": "string"
              }
            ]
          }
        }
      }
    ]
  }
  